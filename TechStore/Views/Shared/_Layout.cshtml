<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggler pull-xs-right" data-toggle="collapse" data-target=".navbar-collapse">
                    ☰
                </button>
                @Html.ActionLink("Application name", "Index", "Store", new { area = "" }, new { @class = "navbar-brand" })
            </div>
         <div class="navbar-collapse collaps">
                <ul class="nav navbar-nav">
                <li> @Html.ActionLink("Products", "Products", "Store")</li>
                <li>@Html.ActionLink("Home", "Index", "Store", new { area = "" }, null)</li>
                <li>  @Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                <li> @Html.Partial("_LoginPartial")</li>
            </ul>
         </div>
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
