@model TechStore.Models.ViewModels.CreateCategoryViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>CreateCategoryViewModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.HiddenFor(model => model.CategoryID, htmlAttributes: new { @class = "control-label col-md-2" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    Product In Category:
    <div id="products-for-category" class="row">

    </div>
    Products Not in Category:
    <div id="products-not-for-category" class="row">

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script type="text/javascript">
    var productsForCategoryDiv = $('#products-for-category');
    var productsNotForCategoryDiv = $('#products-not-for-category');
    var productsList = [];
    var htmlToAppendForRemove = function (ProductID, Name) {
        return "<div class='col-md-6' id='" + ProductID +
            "'><p>" + Name + "</p>" +
            "</div>" +
            "<div class='col-md-6'>" +
            "<button class='btn btn-danger btn-remove' onclick='RemoveProduct(" + ProductID + ")'" +
            ">Remove From Category</button>" +
            "</div>";
    };
    var htmlToAppendForAdd =  function (ProductID, Name) {
        return "<div class='col-md-6' id='" + ProductID +
            "'><p>" + Name + "</p>" +
            "</div>" +
            "<div class='col-md-6'>" +
            "<button class='btn btn-success' onclick='AddProduct(" + ProductID + ")'" +
            ">Add To Category</button>" +
            "</div>";
    };
    function ajaxSuccess(data, status) {
        GetProductsPerCategory();
        GetProductsNotInCategory();
    };

    function GetProductsNotInCategory() {
            //Get all products
            productsNotForCategoryDiv.empty();
            $.ajax({
                    type: "get",
                    url: "/Category/ProductsNotInCategory/" + @Model.CategoryID,
                    success: function (data) {
                        //Once you get the data append it to the Div

                        $.each(data, function (index, item) {
                            //Append with add button
                            let productHTML = htmlToAppendForAdd(item.ProductID, item.ProductName);
                            productsNotForCategoryDiv.append(productHTML);
                        });
                    },
                    data: {
                        categoryID: @Model.CategoryID,
                    },
                     contentType: "application/json; charset=utf-8",
                    dataType: "json",
                });
        };
    function GetProductsPerCategory() {
            //Get all products
            productsForCategoryDiv.empty();
            $.ajax({
                    type: "get",
                    url: "/Category/ProductsPerCategory/" + @Model.CategoryID,
                    success: function (data) {
                        //Once you get the data append it to the Div

                        $.each(data, function (index, item) {
                            //Append with remove button
                            let productHTML = htmlToAppendForRemove(item.ProductID, item.ProductName);
                            productsForCategoryDiv.append(productHTML);
                        });
                    },
                    data: {
                        categoryID: @Model.CategoryID,
                    },
                     contentType: "application/json; charset=utf-8",
                    dataType: "json",
                });
        };
     var RemoveProduct = function(id){
            var buttonID = id;
            var shouldRemove = confirm("Are you sure you want to remove this product from the category?");
            if (shouldRemove) {
                $.ajax({
                    type: "get",
                    url: "/Product/RemoveProductFromCategory",
                    data: {
                        productID: buttonID,
                        categoryID: @Model.CategoryID,
                    },
                    success: ajaxSuccess,
                    // contentType: "application/json; charset=utf-8",
                    // dataType: "json",

                });
            }
        };
    var AddProduct = function(id){
            var buttonID = id;
            var shouldRemove = confirm("Are you sure you want to add this product to the category?");
            if (shouldRemove) {
                $.ajax({
                    type: "get",
                    url: "/Product/AddProductToCategory",
                    data: {
                        productID: buttonID,
                        categoryID: @Model.CategoryID,
                    },
                    success: ajaxSuccess,
                    // contentType: "application/json; charset=utf-8",
                    // dataType: "json",

                });
            }
          };
    $(document).ready(function () {

        //Get all rpodcucts
        GetProductsPerCategory();
        GetProductsNotInCategory();

    });

</script>
